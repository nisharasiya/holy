<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:clickable="true"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/marginLarge"
    android:layout_marginRight="@dimen/marginLarge"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pass"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_centerInParent="true"
            android:src="@mipmap/reset_password"
            />

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/textPadding"
        android:layout_marginRight="@dimen/textPadding"
        android:background="@drawable/border_line"
        android:gravity="center"
        android:inputType="number"
        android:digits="@string/pass_digits"
        android:layout_gravity="center_horizontal"
        android:ems="15"
        android:maxLength="16"
        android:hint="Enter Otp"
        android:layout_above="@+id/pass"
        android:id="@+id/otp"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/marginLarge"
        android:layout_marginLeft="@dimen/textPadding"
        android:layout_marginRight="@dimen/textPadding"
        android:background="@drawable/border_line"
        android:gravity="center"
        android:inputType="textPassword"
        android:digits="@string/pass_digits"
        android:layout_gravity="center_horizontal"
        android:ems="15"
        android:maxLength="16"
        android:hint="Enter Password"
        android:layout_above="@+id/login_password"
        android:id="@+id/pass"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/textPadding"
        android:layout_marginRight="@dimen/textPadding"
        android:digits="@string/pass_digits"
        android:gravity="center"
        android:background="@drawable/border_line"
        android:layout_marginTop="@dimen/marginLarge"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password"
        android:maxLength="16"
        android:layout_marginBottom="@dimen/marginLarge"
        android:ems="15"
        android:layout_above="@+id/save"
        android:id="@+id/login_password"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:background="@drawable/login_shape"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/line"

        android:layout_marginLeft="@dimen/textPadding"
        android:layout_marginTop="@dimen/margin_less"
        android:layout_marginBottom="@dimen/bottom_margin_reset"
        android:gravity="center"
        android:id="@+id/save"
        />



</RelativeLayout>
</LinearLayout>