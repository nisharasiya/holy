<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">


            <ImageView
                android:id="@+id/a"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_chat_bubble" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/a"
                android:gravity="center_vertical"
                android:text="Reception"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/mnu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_settings" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Send SMS"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/mediumTextSize" />


            <EditText
                android:id="@+id/recname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:textSize="@dimen/mediumTextSize" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gender"
                    android:textSize="@dimen/mediumTextSize"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="@dimen/smallTextSize" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="@dimen/smallTextSize" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="@dimen/smallTextSize" />
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/recmob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Enter Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="@dimen/mediumTextSize" />

                    <EditText
                        android:id="@+id/recadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint=" Enter Address"
                        android:lines="3"
                        android:textSize="@dimen/mediumTextSize" />


                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/recmeetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter Meeting Person Name"
                android:textSize="@dimen/mediumTextSize" />

            <EditText
                android:id="@+id/recmeetno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint=" Enter Meeeting Person Contact Number"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="@dimen/mediumTextSize" />

            <EditText
                android:id="@+id/recmeetpurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter Meeeting Purpose"
                android:lines="4"
                android:textSize="@dimen/mediumTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/submitr"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="  Submit  "
                    android:textColor="#ffffff"

                    android:textSize="@dimen/mediumTextSize" />
            </LinearLayout>

            <TextView
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="View Records"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/mediumTextSize" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:background="#0087b4"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>







        </LinearLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>