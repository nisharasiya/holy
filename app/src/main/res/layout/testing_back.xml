<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="70dp"
                android:src="@drawable/ic_person"
                android:id="@+id/a"
                android:paddingRight="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Teacher"
                android:layout_toRightOf="@+id/a"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/White"
                android:layout_height="match_parent" />


            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_settings"
                android:id="@+id/mnu"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_height="40dp" />

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/homeworkll"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dash"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/checkattendance"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Attendance"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="View Attendance"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dash"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:id="@+id/attll"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/salaryhistory"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Salary"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Salary History"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:id="@+id/timetblll"
                android:background="@drawable/dash"
                android:padding="8dp"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/time_table" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time Table"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:text="Daily Time Table"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:id="@+id/talkll"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dash"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/talktoprinciple"
                    android:layout_height="50dp" />

                <TextView

                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Principal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Talk To Principal"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/leavell"
            android:background="@drawable/dash"
            android:padding="8dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/leaverequest" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Leave"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/White"
                android:text="Request A Leave"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:padding="8dp"
            android:id="@+id/rolll"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dash"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/studentrollno"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No" />

            <TextView
                android:layout_width="wrap_content"
                android:text="View Student Roll No"
                android:gravity="center"
                android:textColor="@color/White"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>

